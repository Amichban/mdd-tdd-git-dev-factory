{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Graph Contract Schema",
  "description": "Contract 1: Typed Business Graph for Registry System",
  "type": "object",
  "required": ["version", "nodes", "edges"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/definitions/GraphNode" }
    },
    "edges": {
      "type": "array",
      "items": { "$ref": "#/definitions/GraphEdge" }
    }
  },
  "definitions": {
    "GraphNode": {
      "type": "object",
      "required": ["id", "type", "label"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(wf|asset|rule|skill|algo)\\.[a-z_]+\\.[a-z_]+$"
        },
        "type": {
          "type": "string",
          "enum": ["WORKFLOW", "ASSET", "RULE", "SKILL", "ALGORITHM", "PIPELINE", "SOURCE"]
        },
        "label": { "type": "string" },
        "metadata": {
          "type": "object",
          "properties": {
            "owner": { "type": "string" },
            "business_criticality": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"] },
            "sla": { "type": "string" },
            "storage": { "type": "string" },
            "retention": { "type": "string" }
          }
        },
        "status_source": { "type": "string" }
      }
    },
    "GraphEdge": {
      "type": "object",
      "required": ["source", "target", "relation"],
      "properties": {
        "source": { "type": "string" },
        "target": { "type": "string" },
        "relation": {
          "type": "string",
          "enum": ["PRODUCES", "CONSUMES", "TRIGGERS", "VALIDATES", "DEPENDS_ON", "TRANSFORMS"]
        },
        "semantics": { "type": "string" }
      }
    }
  }
}
