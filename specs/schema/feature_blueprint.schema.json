{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "feature_blueprint.schema.json",
  "title": "Feature Blueprint Schema",
  "description": "9-box template for defining features as configuration values",
  "type": "object",
  "required": ["feature_name", "system_1_registry", "system_2_engine", "system_3_observer"],
  "properties": {
    "feature_name": {
      "type": "string",
      "description": "Name of the feature from user story"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "system_1_registry": {
      "type": "object",
      "description": "The Registry - What business objects are involved",
      "required": ["entity_catalog", "task_library", "policy_vault"],
      "properties": {
        "entity_catalog": {
          "type": "object",
          "description": "Box 1.1 - What Nouns (Assets) are we adding?",
          "properties": {
            "assets": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "name", "layer"],
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "layer": {
                    "type": "string",
                    "enum": ["domain", "infrastructure", "operational"]
                  },
                  "type": { "type": "string" },
                  "source": { "type": "string" },
                  "owner": { "type": "string" }
                }
              }
            },
            "relationships": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["from", "to", "type"],
                "properties": {
                  "from": { "type": "string" },
                  "to": { "type": "string" },
                  "type": { "type": "string" }
                }
              }
            }
          }
        },
        "task_library": {
          "type": "object",
          "description": "Box 1.2 - What Scripts (Skills) do we need?",
          "properties": {
            "skills": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "name", "script"],
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "script": { "type": "string" },
                  "inputs": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "outputs": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "policy_vault": {
          "type": "object",
          "description": "Box 1.3 - What Rules (Hooks) apply?",
          "properties": {
            "rules": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "name", "condition", "action"],
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "condition": { "type": "string" },
                  "action": { "type": "string" },
                  "retry": { "type": "integer", "default": 3 },
                  "timeout": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "system_2_engine": {
      "type": "object",
      "description": "The Engine - How and when does it run",
      "required": ["schedule", "worker_spec", "signals"],
      "properties": {
        "schedule": {
          "type": "object",
          "description": "Box 2.1 - When does it run?",
          "properties": {
            "cron": { "type": "string" },
            "trigger": {
              "type": "string",
              "enum": ["scheduled", "event", "manual", "webhook"]
            },
            "timezone": { "type": "string", "default": "UTC" }
          }
        },
        "worker_spec": {
          "type": "object",
          "description": "Box 2.2 - What tools are allowed?",
          "properties": {
            "tools": {
              "type": "array",
              "items": { "type": "string" }
            },
            "permissions": {
              "type": "array",
              "items": { "type": "string" }
            },
            "resources": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" },
                "timeout": { "type": "string" }
              }
            }
          }
        },
        "signals": {
          "type": "object",
          "description": "Box 2.3 - What JSON events must be emitted?",
          "properties": {
            "emit": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["event_type", "schema"],
                "properties": {
                  "event_type": { "type": "string" },
                  "schema": { "type": "object" },
                  "correlation_id": { "type": "boolean", "default": true }
                }
              }
            }
          }
        }
      }
    },
    "system_3_observer": {
      "type": "object",
      "description": "The Observer - How to monitor and react",
      "required": ["subscriptions", "runbooks", "ui_components"],
      "properties": {
        "subscriptions": {
          "type": "object",
          "description": "Box 3.1 - What events do we listen for?",
          "properties": {
            "topics": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["topic", "handler"],
                "properties": {
                  "topic": { "type": "string" },
                  "handler": { "type": "string" },
                  "filter": { "type": "string" }
                }
              }
            }
          }
        },
        "runbooks": {
          "type": "object",
          "description": "Box 3.2 - What does the Agent do if it fails?",
          "properties": {
            "on_success": {
              "type": "array",
              "items": { "type": "string" }
            },
            "on_warning": {
              "type": "array",
              "items": { "type": "string" }
            },
            "on_failure": {
              "type": "array",
              "items": { "type": "string" }
            },
            "escalation": {
              "type": "object",
              "properties": {
                "threshold": { "type": "integer" },
                "notify": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        },
        "ui_components": {
          "type": "object",
          "description": "Box 3.3 - What Slash Command/Widget to show?",
          "properties": {
            "slash_commands": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["command", "action"],
                "properties": {
                  "command": { "type": "string" },
                  "description": { "type": "string" },
                  "action": { "type": "string" }
                }
              }
            },
            "widgets": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type", "name"],
                "properties": {
                  "type": { "type": "string" },
                  "name": { "type": "string" },
                  "data": { "type": "object" }
                }
              }
            },
            "alerts": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["severity", "message"],
                "properties": {
                  "severity": { "type": "string", "enum": ["info", "warning", "critical", "fatal"] },
                  "message": { "type": "string" },
                  "action": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
