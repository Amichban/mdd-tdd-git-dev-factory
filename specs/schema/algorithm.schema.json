{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "algorithm.schema.json",
  "title": "Algorithm Schema",
  "description": "Schema for defining calculations and business logic",
  "type": "object",
  "required": ["algorithms"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "algorithms": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Algorithm"
      }
    }
  },
  "definitions": {
    "Algorithm": {
      "type": "object",
      "required": ["id", "name", "description", "inputs", "output", "steps"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^algo_[a-z][a-z0-9_]*$",
          "description": "Unique identifier prefixed with algo_"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "description": {
          "type": "string",
          "description": "What this algorithm does"
        },
        "inputs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Input"
          }
        },
        "output": {
          "$ref": "#/definitions/Output"
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Step"
          }
        },
        "finalFormula": {
          "type": "string",
          "description": "Final calculation combining steps"
        },
        "tests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Test"
          }
        }
      }
    },
    "Input": {
      "type": "object",
      "required": ["id", "name", "type", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["number", "integer", "string", "boolean", "array", "object"]
        },
        "description": {
          "type": "string"
        },
        "constraints": {
          "type": "object",
          "properties": {
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          }
        }
      }
    },
    "Output": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["number", "integer", "string", "boolean", "array", "object"]
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Step": {
      "type": "object",
      "required": ["id", "name", "description", "formula"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "description": "Plain English explanation of this step"
        },
        "formula": {
          "type": "string",
          "description": "Mathematical formula"
        },
        "weight": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Weight if this is part of weighted calculation"
        }
      }
    },
    "Test": {
      "type": "object",
      "required": ["inputs", "expected"],
      "properties": {
        "inputs": {
          "type": "object",
          "description": "Input values for test"
        },
        "expected": {
          "description": "Expected output value"
        },
        "tolerance": {
          "type": "number",
          "description": "Acceptable difference for numeric outputs"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
