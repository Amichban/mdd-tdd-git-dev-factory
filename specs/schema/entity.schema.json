{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "entity.schema.json",
  "title": "Entity Schema",
  "description": "Schema for defining domain entities in the ontology",
  "type": "object",
  "required": ["entities"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "entities": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Entity"
      }
    }
  },
  "definitions": {
    "Entity": {
      "type": "object",
      "required": ["id", "name", "description", "properties"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Unique identifier in snake_case"
        },
        "name": {
          "type": "string",
          "description": "Display name in PascalCase"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Property"
          }
        },
        "relationships": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Relationship"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Action"
          }
        },
        "indexes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Index"
          }
        }
      }
    },
    "Property": {
      "type": "object",
      "required": ["id", "name", "type", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "integer", "boolean", "datetime", "date", "enum", "array", "object"]
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "constraints": {
          "$ref": "#/definitions/Constraints"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "For enum type only"
        },
        "default": {
          "description": "Default value"
        },
        "calculatedBy": {
          "type": "string",
          "description": "Algorithm ID if this is a calculated field"
        },
        "auto": {
          "type": "string",
          "enum": ["now", "uuid", "increment"],
          "description": "Auto-generated value type"
        }
      }
    },
    "Constraints": {
      "type": "object",
      "properties": {
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        },
        "pattern": {
          "type": "string"
        },
        "precision": {
          "type": "integer"
        }
      }
    },
    "Relationship": {
      "type": "object",
      "required": ["id", "name", "targetEntity", "type", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "name": {
          "type": "string"
        },
        "targetEntity": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["one-to-one", "one-to-many", "many-to-one", "many-to-many"]
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "description": {
          "type": "string"
        },
        "cascade": {
          "type": "string",
          "enum": ["none", "delete", "nullify"]
        }
      }
    },
    "Action": {
      "type": "object",
      "required": ["id", "name", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "required": {
                "type": "boolean"
              }
            }
          }
        },
        "preconditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "postconditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "workflowId": {
          "type": "string"
        }
      }
    },
    "Index": {
      "type": "object",
      "required": ["fields"],
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "unique": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
